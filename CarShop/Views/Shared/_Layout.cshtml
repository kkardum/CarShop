<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--link za css-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarShop.styles.css" asp-append-version="true" />

    <!-- Box Icons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet' />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CarShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!--navbar-->

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AdminCars" asp-action="Index">CARS</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="Index">CARS</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="~/Pages/aboutus.html">ABOUT US</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AdminParts" asp-action="Index">PARTS</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Parts" asp-action="Index">PARTS</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="AdminBlogs" asp-action="Index">BLOGS</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Blogs" asp-action="Index">BLOGS</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="~/Pages/contact.html">CONTACT</a>
                        </li>
                    </ul>

                    <!--košarica-->

                    <i class="bx bx-shopping-bag" id="cart-icon" data-quantity="0"></i>
                    <div id="card-element" class="cart">
                        <h2 class="cart-title">Your Cart</h2>
                        <div class="cart-content"></div>
                        <div class="total">
                            <div id="amount" class="total-title">Total</div>
                            <div id="amount" class="total-price">$0</div>
                        </div>
                        <button id="checkout-button" type="submit" class="btn-buy">Pay Now</button>
                        <i class="bx bx-x" id="close-cart"></i>
                    </div>

                    <!--košarica-->

                    <partial name="_LoginPartial" />
                </div>

                <!--navbar-->

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--footer-->

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CarShop - <a href="~/Pages/privacy.html">Privacy</a>
        </div>
    </footer>

    <!--footer-->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!--link za js-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cart.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>